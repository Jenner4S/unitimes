<hibernate-mapping package="org.unitime.timetable.model">
    <class name="SolverGroup" table="solver_group">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">solver_group_seq</param>
            </generator>
        </id>

        <property
            name="name"
            column="name"
            type="string"
            not-null="true"
            length="50"/>

        <property
            name="abbv"
            column="abbv"
            type="string"
            not-null="true"
            length="10"/>

        <many-to-one
            name="session"
            class="Session"
            column="session_id"
            not-null="true"
            foreign-key="fk_solver_group_session"/>

        <set name="timetableManagers" table="solver_gr_to_tt_mgr">
            <cache include="non-lazy" usage="transactional"/>
            <key column="solver_group_id"/>
            <many-to-many
                class="TimetableManager"
                column="timetable_mgr_id"
                foreign-key="fk_solver_gr_to_tt_mgr_ttmgr"/>

        </set>
        <set
            name="departments"
            table="department"
            cascade="none"
            lazy="true"
            inverse="true">

            <key column="solver_group_id"/>
            <one-to-many class="Department"/>
        </set>

        <set
            name="solutions"
            table="solution"
            inverse="true"
            lazy="true"
            cascade="all-delete-orphan">

            <cache include="non-lazy" usage="transactional"/>
            <key column="owner_id"/>
            <one-to-many class="Solution"/>
        </set>

    </class>
</hibernate-mapping>
