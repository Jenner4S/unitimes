<hibernate-mapping package="org.unitime.timetable.model">
    <class
        name="RoomDept"
        table="room_dept"
        abstract="false">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">room_sharing_group_seq</param>
            </generator>
        </id>

        <property
            name="control"
            column="is_control"
            type="java.lang.Boolean"
            not-null="true"/>
            
        <many-to-one
        	name="preference"
        	class="PreferenceLevel"
            lazy="proxy"
            not-null="false"
            formula="(select p.pref_level_id from %SCHEMA%.room_pref p where p.owner_id = department_id and p.room_id = room_id)"
        	/>

        <many-to-one
            name="room"
            class="Location"
            column="room_id"
            not-null="true"
            lazy="false"/>

        <many-to-one
            name="department"
            class="Department"
            column="department_id"
            not-null="true"
            foreign-key="fk_room_dept_dept"/>

    </class>

</hibernate-mapping>
