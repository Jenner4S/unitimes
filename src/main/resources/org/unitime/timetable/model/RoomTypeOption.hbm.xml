<hibernate-mapping package="org.unitime.timetable.model">
    <class name="RoomTypeOption" table="room_type_option">
        <cache include="non-lazy" usage="transactional"/>
        <composite-id>
            <key-many-to-one
                name="roomType"
                class="RoomType"
                column="room_type"
                foreign-key="fk_rtype_option_type"/>

            <key-many-to-one
                name="department"
                class="Department"
                column="department_id"
                foreign-key="fk_rtype_option_department"/>

        </composite-id>
        <property
            name="status"
            column="status"
            type="java.lang.Integer"
            not-null="true"
            length="10"/>

        <property
            name="message"
            column="message"
            type="java.lang.String"
            not-null="false"
            length="2048"/>
            
        <property
            name="breakTime"
            column="break_time"
            type="java.lang.Integer"
            not-null="true"/>

    </class>
</hibernate-mapping>
