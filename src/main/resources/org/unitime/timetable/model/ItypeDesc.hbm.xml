<hibernate-mapping package="org.unitime.timetable.model">
    <class name="ItypeDesc" table="itype_desc">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="itype"
            column="itype"
            type="java.lang.Integer"
            length="2"/>

        <property
            name="abbv"
            column="abbv"
            type="java.lang.String"
            not-null="false"
            length="7"/>

        <property
            name="desc"
            column="description"
            type="java.lang.String"
            not-null="false"
            length="50"/>

        <property
            name="sis_ref"
            column="sis_ref"
            type="java.lang.String"
            not-null="false"
            length="20"/>

        <property
            name="basic"
            column="basic"
            type="java.lang.Integer"
            not-null="false"
            length="1"/>

        <property
            name="organized"
            column="organized"
            type="java.lang.Boolean"
            not-null="true"/>

        <many-to-one
            name="parent"
            class="ItypeDesc"
            column="parent"
            not-null="false"
            foreign-key="fk_itype_parent"/>

    </class>
</hibernate-mapping>
