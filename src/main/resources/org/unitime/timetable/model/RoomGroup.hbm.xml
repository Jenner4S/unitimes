<hibernate-mapping package="org.unitime.timetable.model">
    <class name="RoomGroup" table="room_group">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">room_group_seq</param>
            </generator>
        </id>

        <many-to-one
            name="department"
            class="Department"
            column="department_id"
            not-null="false"
            lazy="false"/>

        <property
            name="name"
            column="name"
            type="java.lang.String"
            not-null="true"
            length="60"/>

        <property
            name="abbv"
            column="abbv"
            type="java.lang.String"
            not-null="true"
            length="60"/>

        <property
            name="description"
            column="description"
            type="java.lang.String"
            not-null="false"
            length="1000"/>

        <property
            name="global"
            column="global"
            type="java.lang.Boolean"
            not-null="true"/>

        <property
            name="defaultGroup"
            column="default_group"
            type="java.lang.Boolean"
            not-null="true"/>

        <set
            name="rooms"
            table="room_group_room"
            inverse="true">
            <cache include="non-lazy" usage="transactional"/>
            <key column="room_group_id"/>
            <many-to-many class="Location" column="room_id"/>
        </set>

        <many-to-one
            name="session"
            class="Session"
            column="session_id"
            not-null="true"
            foreign-key="fk_room_group_session"/>

    </class>
</hibernate-mapping>
