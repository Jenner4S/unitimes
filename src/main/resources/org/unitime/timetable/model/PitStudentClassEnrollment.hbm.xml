<hibernate-mapping package="org.unitime.timetable.model">
    <class name="PitStudentClassEnrollment" table="pit_student_class_enrl">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">point_in_time_seq</param>
            </generator>
        </id>

        <many-to-one
            name="pitStudent"
            class="PitStudent"
            column="pit_student_id"
            not-null="true"
            foreign-key="fk_pit_sce_to_pit_stu"/>


        <many-to-one
            name="pitCourseOffering"
            class="PitCourseOffering"
            column="pit_course_offering_id"
            foreign-key="fk_pit_sce_to_pit_co"
            not-null="true"/>

        <many-to-one
            name="pitClass"
            class="PitClass"
            column="pit_class_id"
            not-null="true"
            foreign-key="fk_pit_sce_to_pit_c"/>

        <property
            name="timestamp"
            column="timestamp"
            type="java.util.Date"
            not-null="true"/>
            
        <property
            name="changedBy"
            column="changed_by"
            type="java.lang.String"
            not-null="false"
            length="40"/>

    </class>
</hibernate-mapping>
