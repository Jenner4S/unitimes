<hibernate-mapping package="org.unitime.timetable.model">
    <class name="OnlineSectioningLog" table="sectioning_log">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <property
            name="timeStamp"
            column="time_stamp"
            type="java.sql.Timestamp"
            not-null="true"/>

        <many-to-one
            name="session"
            class="Session"
            column="session_id"
            not-null="true"/>

        <property
            name="student"
            column="student"
            type="java.lang.String"
            not-null="true"
            length="40"/>

        <property
            name="operation"
            column="operation"
            type="java.lang.String"
            not-null="true"
            length="20"/>
            
        <property
            name="action"
            column="action"
            type="byte[]"
            not-null="true"
            lazy="true"/>

        <property
            name="result"
            column="result"
            type="java.lang.Integer"
            not-null="false"/>

        <property
            name="user"
            column="user_id"
            type="java.lang.String"
            not-null="false"
            length="40"/>
            
        <property
            name="cpuTime"
            column="cpu_time"
            type="java.lang.Long"
            not-null="false"/>
            
         <property
            name="wallTime"
            column="wall_time"
            type="java.lang.Long"
            not-null="false"/>
            
         <property
            name="message"
            column="message"
            type="java.lang.String"
            not-null="false"
            length="255"/>

        <property
            name="apiGetTime"
            column="api_get_time"
            type="java.lang.Long"
            not-null="false"/>

        <property
            name="apiPostTime"
            column="api_post_time"
            type="java.lang.Long"
            not-null="false"/>

		<property
            name="apiException"
            column="api_exception"
            type="java.lang.String"
            not-null="false"
            length="255"/>
    </class>
</hibernate-mapping>
