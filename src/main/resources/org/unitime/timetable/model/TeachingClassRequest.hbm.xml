<hibernate-mapping package="org.unitime.timetable.model">
    <class name="TeachingClassRequest" table="teachreq_class">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long"
            length="20">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>
        <property
            name="percentShare"
            column="percent_share"
            type="java.lang.Integer"
            not-null="true"/>
        <property
            name="lead"
            type="java.lang.Boolean"
            column="is_lead"
            not-null="true"/>
		<property
            name="canOverlap"
            type="java.lang.Boolean"
            column="can_overlap"
            not-null="true"/>
        <many-to-one
            name="teachingRequest"
            class="TeachingRequest"
            column="request_id"
            not-null="true"
            foreign-key="fk_teachreq_crequest"/>
        <many-to-one
            name="teachingClass"
            class="Class_"
            column="class_id"
            not-null="true"
            foreign-key="fk_teachreq_class"/>
        <property
            name="assignInstructor"
            type="java.lang.Boolean"
            column="assign_instructor"
            not-null="true"/>
		<property
            name="common"
            type="java.lang.Boolean"
            column="common"
            not-null="true"/>
    </class>
</hibernate-mapping>
