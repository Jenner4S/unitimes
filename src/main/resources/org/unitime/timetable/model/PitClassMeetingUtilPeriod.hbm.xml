<hibernate-mapping package="org.unitime.timetable.model">
    <class
        name="PitClassMeetingUtilPeriod"
        abstract="false"
        table="pit_class_mtg_util_period">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">point_in_time_seq</param>
            </generator>
        </id>

        <many-to-one
            name="pitClassMeeting"
            class="PitClassMeeting"
            column="pit_class_meeting_id"
            foreign-key="fk_pit_cmup_to_pit_cm"
            not-null="true"/>

        <property
            name="timeSlot"
            column="time_slot"
            type="java.lang.Integer"
            not-null="true"
            length="10"/>

    </class>

</hibernate-mapping>
