<hibernate-mapping package="org.unitime.timetable.model">
    <class name="ExamStatus" table="exam_status">
        <cache include="non-lazy" usage="transactional"/>
        
        <composite-id>
            <key-many-to-one
                name="session"
            	class="Session"
            	column="session_id"
	            foreign-key="fk_xstatus_session"/>

            <key-many-to-one
                name="type"
            	class="ExamType"
            	column="type_id"
            	foreign-key="fk_xstatus_type"/>
        </composite-id>

        <many-to-one
            name="status"
            class="DepartmentStatusType"
            column="status_id"
            not-null="false"
            foreign-key="fk_xstatus_status"/>

        <set
            name="managers"
            table="exam_managers"
            inverse="false"
            lazy="true">

            <cache include="non-lazy" usage="transactional"/>
            <key foreign-key="fk_xmanagers_status">
            	<column name="session_id"/>
            	<column name="type_id"/>
            </key>
            <many-to-many class="TimetableManager" column="manager_id" foreign-key="fk_xmanagers_manager"/>
        </set>
	</class>
</hibernate-mapping>