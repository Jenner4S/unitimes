<hibernate-mapping package="org.unitime.timetable.model">
    <class name="MessageLog" table="message_log">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <property
            name="timeStamp"
            column="time_stamp"
            type="java.sql.Timestamp"
            not-null="true"/>
            
        <property
            name="level"
            column="log_level"
            type="java.lang.Integer"
            not-null="true"/>

        <property
            name="message"
            column="message"
            type="java.lang.String"
            not-null="false"/>

        <property
            name="logger"
            column="logger"
            type="java.lang.String"
            not-null="true"
            length="255"/>

        <property
            name="thread"
            column="thread"
            type="java.lang.String"
            not-null="false"
            length="100"/>

        <property
            name="ndc"
            column="ndc"
            type="java.lang.String"
            not-null="false"/>

        <property
            name="exception"
            column="exception"
            type="java.lang.String"
            not-null="false"/>

    </class>
</hibernate-mapping>
