<hibernate-mapping package="org.unitime.timetable.model">
    <class
        name="SolverInfo"
        table="solver_info"
        discriminator-value="0"
        abstract="true">

        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">solver_info_seq</param>
            </generator>
        </id>

        <discriminator
            column="type"
            type="java.lang.Integer"
            not-null="true"
            length="3"/>

        <property
            name="data"
            column="value"
            type="byte[]"
            not-null="true"/>

        <property
            name="opt"
            column="opt"
            type="java.lang.String"
            not-null="false"
            length="250"/>

        <many-to-one
            name="definition"
            class="SolverInfoDef"
            column="solver_info_def_id"
            not-null="false"
            foreign-key="fk_solver_info_def"/>

        <subclass name="SolutionInfo" discriminator-value="1">
            <many-to-one
                name="solution"
                class="Solution"
                column="solution_id"
                not-null="true"
                foreign-key="fk_solution_info"/>

        </subclass>
        <subclass name="AssignmentInfo" discriminator-value="2">
            <many-to-one
                name="assignment"
                class="Assignment"
                column="assignment_id"
                not-null="true"
                foreign-key="fk_assignment_info"/>

        </subclass>
        <subclass name="ConstraintInfo" discriminator-value="3">
            <set name="assignments" table="constraint_info">
                <cache include="non-lazy" usage="transactional"/>
                <key column="solver_info_id"/>
                <many-to-many
                    class="Assignment"
                    column="assignment_id"
                    foreign-key="fk_constraint_info_assignment"/>

            </set>
        </subclass>
    </class>

</hibernate-mapping>
