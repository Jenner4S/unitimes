<hibernate-mapping package="org.unitime.timetable.model">
    <class name="Staff" table="staff">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">staff_seq</param>
            </generator>
        </id>

        <property
            name="externalUniqueId"
            column="external_uid"
            type="java.lang.String"
            not-null="false"
            length="40"/>

        <property
            name="firstName"
            column="fname"
            type="java.lang.String"
            not-null="false"
            length="100"/>

        <property
            name="middleName"
            column="mname"
            type="java.lang.String"
            not-null="false"
            length="100"/>

        <property
            name="lastName"
            column="lname"
            type="java.lang.String"
            not-null="true"
            length="100"/>

        <property
            name="dept"
            column="dept"
            type="java.lang.String"
            not-null="false"
            length="50"/>

        <property
            name="email"
            column="email"
            type="java.lang.String"
            not-null="false"
            length="200"/>

		<property
            name="academicTitle"
            column="acad_title"
            type="java.lang.String"
            not-null="false"
            length="50"/>
		
        <many-to-one
            name="positionType"
            class="PositionType"
            column="pos_type"
            foreign-key="fk_staff_pos_type"/>
    </class>
</hibernate-mapping>
