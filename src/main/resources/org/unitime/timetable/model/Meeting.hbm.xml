<hibernate-mapping package="org.unitime.timetable.model">
    <class
        name="Meeting"
        abstract="false"
        table="meeting">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <many-to-one
            name="event"
            class="Event"
            column="event_id"
            foreign-key="fk_meeting_event"
            not-null="true"/>

        <property
            name="meetingDate"
            column="meeting_date"
            type="java.sql.Timestamp"
            not-null="true"/>

        <property
            name="startPeriod"
            column="start_period"
            type="java.lang.Integer"
            not-null="true"
            length="10"/>

        <property
            name="startOffset"
            column="start_offset"
            type="java.lang.Integer"
            not-null="false"
            length="10"/>

        <property
            name="stopPeriod"
            column="stop_period"
            type="java.lang.Integer"
            not-null="true"
            length="10"/>

        <property
            name="stopOffset"
            column="stop_offset"
            type="java.lang.Integer"
            not-null="false"
            length="10"/>

        <property
            name="locationPermanentId"
            column="location_perm_id"
            type="java.lang.Long"
            not-null="false"
            length="20"/>

        <property
            name="classCanOverride"
            column="class_can_override"
            type="java.lang.Boolean"
            not-null="true"/>
            
        <property
        	name="approvalStatus"
        	column="approval_status"
        	type="java.lang.Integer"
        	not-null="true"/>

        <property
            name="approvalDate"
            column="approval_date"
            type="java.sql.Timestamp"
            not-null="false"/>

		<set
			name="meetingContacts"
			table="meeting_contact"
			inverse="false"
	        lazy="true">
	        
	        <cache include="non-lazy" usage="transactional"/>
	        <key column="meeting_id" foreign-key="fk_meeting_contact_mtg"/>
	        <many-to-many class="EventContact" column="contact_id" foreign-key="fk_meeting_contact_cont"/>
	    </set>
    </class>

</hibernate-mapping>
