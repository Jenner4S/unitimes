<hibernate-mapping package="org.unitime.timetable.model">
    <class name="PitStudentAcadAreaMinorClassification" table="pit_stu_aa_minor_clasf">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">point_in_time_seq</param>
            </generator>
        </id>

        <many-to-one
            name="pitStudent"
            class="PitStudent"
            column="pit_student_id"
            not-null="true"
            foreign-key="fk_pit_stuamnc_to_pit_stu"/>

        <many-to-one
            name="academicArea"
            class="AcademicArea"
            column="acad_area_id"
            not-null="true"
            foreign-key="fk_pit_stuamnc_to_aa"/>
            
        <many-to-one
            name="academicClassification"
            class="AcademicClassification"
            column="acad_clasf_id"
            not-null="true"
            foreign-key="fk_pit_stuamnc_to_ac"/>

        <many-to-one
            name="minor"
            class="PosMinor"
            column="minor_id"
            not-null="true"
            foreign-key="fk_pit_stuamnc_to_pm"/>

    </class>
</hibernate-mapping>
