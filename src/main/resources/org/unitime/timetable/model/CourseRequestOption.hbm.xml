<hibernate-mapping package="org.unitime.timetable.model">
    <class name="CourseRequestOption" table="course_request_option">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <many-to-one
            name="courseRequest"
            class="CourseRequest"
            column="course_request_id"
            not-null="true"
            foreign-key="fk_course_request_options_req"/>

        <property
            name="optionType"
            column="option_type"
            type="java.lang.Integer"
            not-null="true"
            length="10"/>

        <property
            name="value"
            column="value"
            type="byte[]"
            not-null="true"
            lazy="true"/>

    </class>
</hibernate-mapping>
