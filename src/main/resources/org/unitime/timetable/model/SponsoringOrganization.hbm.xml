<hibernate-mapping package="org.unitime.timetable.model">
    <class
        name="SponsoringOrganization"
        table="sponsoring_organization"
        abstract="false">
        <cache usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <property
            name="name"
            column="name"
            type="string"
            not-null="true"
            length="100"/>

        <property
            name="email"
            column="email"
            type="string"
            not-null="false"
            length="200"/>

    </class>

</hibernate-mapping>
