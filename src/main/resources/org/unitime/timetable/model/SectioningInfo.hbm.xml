<hibernate-mapping package="org.unitime.timetable.model">
    <class name="SectioningInfo" table="sectioning_info">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <many-to-one
            name="clazz"
            class="Class_"
            column="class_id"
            not-null="true"
            unique="true"
            foreign-key="fk_sectioning_info_class"/>

        <property
            name="nbrExpectedStudents"
            column="nbr_exp_students"
            type="java.lang.Double"
            not-null="true"/>

        <property
            name="nbrHoldingStudents"
            column="nbr_hold_students"
            type="java.lang.Double"
            not-null="true"/>

    </class>
</hibernate-mapping>
