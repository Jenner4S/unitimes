<hibernate-mapping package="org.unitime.timetable.model">
    <class
        name="RoomFeature"
        table="room_feature"
        lazy="true">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">room_feature_seq</param>
            </generator>
        </id>

        <discriminator
            column="discriminator"
            type="java.lang.String"
            not-null="true"
            length="10"/>

        <property
            name="label"
            column="label"
            type="java.lang.String"
            not-null="true"
            length="60"/>

        <property
            name="abbv"
            column="abbv"
            type="java.lang.String"
            not-null="false"
            length="60"/>

        <property
            name="description"
            column="description"
            type="java.lang.String"
            not-null="false"
            length="1000"/>

        <set
            name="rooms"
            table="room_join_room_feature"
            inverse="true">
            <cache include="non-lazy" usage="transactional"/>
            <key column="feature_id"/>
            <many-to-many class="Location" column="room_id"/>
        </set>
        
        <many-to-one
        	name="featureType"
            class="RoomFeatureType"
            column="feature_type_id"
            not-null="false"
            foreign-key="fk_feature_type"/>

        <subclass
            name="GlobalRoomFeature"
            extends="RoomFeature"
            discriminator-value="global">
            <property
                name="sisReference"
                column="sis_reference"
                type="java.lang.String"
                not-null="false"
                length="20"/>

            <property
                name="sisValue"
                column="sis_value"
                type="java.lang.String"
                not-null="false"
                length="20"/>

	        <many-to-one
    	        name="session"
        	    class="Session"
            	column="session_id"
            	not-null="true"
            	foreign-key="fk_room_feature_session"/>
        </subclass>

        <subclass
            name="DepartmentRoomFeature"
            extends="RoomFeature"
            discriminator-value="department">
            <many-to-one
                name="department"
                class="Department"
                column="department_id"
                not-null="true"
                lazy="false"
                foreign-key="fk_room_feature_dept"/>

        </subclass>

    </class>

</hibernate-mapping>
