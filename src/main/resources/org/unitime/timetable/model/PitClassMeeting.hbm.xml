<hibernate-mapping package="org.unitime.timetable.model">
    <class
        name="PitClassMeeting"
        abstract="false"
        table="pit_class_meeting">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">point_in_time_seq</param>
            </generator>
        </id>

        <many-to-one
            name="pitClassEvent"
            class="PitClassEvent"
            column="pit_class_event_id"
            foreign-key="fk_pit_cm_to_pit_ce"
            not-null="true"/>

        <property
            name="meetingDate"
            column="meeting_date"
            type="java.sql.Timestamp"
            not-null="true"/>

        <property
            name="startPeriod"
            column="start_period"
            type="java.lang.Integer"
            not-null="true"
            length="10"/>

        <property
            name="startOffset"
            column="start_offset"
            type="java.lang.Integer"
            not-null="false"
            length="10"/>

        <property
            name="stopPeriod"
            column="stop_period"
            type="java.lang.Integer"
            not-null="true"
            length="10"/>

        <property
            name="stopOffset"
            column="stop_offset"
            type="java.lang.Integer"
            not-null="false"
            length="10"/>

        <property
            name="locationPermanentId"
            column="location_perm_id"
            type="java.lang.Long"
            not-null="false"
            length="20"/>

        <property
            name="timePatternMinPerMtg"
            column="time_pattern_min_per_mtg"
            type="java.lang.Integer"
            not-null="true"
            length="10"/>

        <property
            name="calculatedMinPerMtg"
            column="calculated_min_per_mtg"
            type="java.lang.Integer"
            not-null="true"
            length="10"/>
            
        <set
            name="pitClassMeetingUtilPeriods"
            lazy="true"
            cascade="all-delete-orphan"
            inverse="true">

            <cache include="non-lazy" usage="transactional"/>
            <key column="pit_class_meeting_id" foreign-key="fk_pit_cmup_to_pit_cm"/>
            <one-to-many class="PitClassMeetingUtilPeriod"/>
        </set>

    </class>

</hibernate-mapping>
