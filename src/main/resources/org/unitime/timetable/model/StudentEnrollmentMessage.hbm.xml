<hibernate-mapping package="org.unitime.timetable.model">
    <class name="StudentEnrollmentMessage" table="student_enrl_msg">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <many-to-one
            name="courseDemand"
            class="CourseDemand"
            column="course_demand_id"
            not-null="true"
            foreign-key="fk_student_enrl_msg_demand"/>

        <property
            name="message"
            column="message"
            type="java.lang.String"
            not-null="true"
            length="255"/>

        <property
            name="level"
            column="msg_level"
            type="java.lang.Integer"
            not-null="true"
            length="10"/>

        <property
            name="type"
            column="type"
            type="java.lang.Integer"
            not-null="true"
            length="10"/>

        <property
            name="timestamp"
            column="timestamp"
            type="java.util.Date"
            not-null="true"/>

        <property
            name="order"
            column="ord"
            type="java.lang.Integer"
            not-null="true"
            length="10"/>

    </class>
</hibernate-mapping>
