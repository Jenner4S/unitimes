<hibernate-mapping package="org.unitime.timetable.model">
    <class name="CourseSubpartCredit" table="course_subpart_credit">
        <cache include="non-lazy" usage="transactional"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">pref_group_seq</param>
            </generator>
        </id>

        <property
            name="subpartId"
            column="subpart_id"
            type="java.lang.String"
            not-null="true"
            length="10"/>

        <property
            name="creditType"
            column="credit_type"
            type="java.lang.String"
            not-null="true"
            length="20"/>

        <property
            name="creditUnitType"
            column="credit_unit_type"
            type="java.lang.String"
            not-null="true"
            length="20"/>

        <property
            name="creditFormat"
            column="credit_format"
            type="java.lang.String"
            not-null="true"
            length="20"/>

        <property
            name="fixedMinimumCredit"
            column="fixed_min_credit"
            type="java.lang.Float"
            not-null="true"
            length="10"/>

        <property
            name="maximumCredit"
            column="max_credit"
            type="java.lang.Float"
            not-null="false"
            length="10"/>

        <property
            name="fractionalCreditAllowed"
            column="frac_credit_allowed"
            type="java.lang.Boolean"
            not-null="false"
            length="10"/>

        <many-to-one
            name="courseCatalog"
            class="CourseCatalog"
            column="course_catalog_id"
            insert="true"
            update="false"
            not-null="true"
            foreign-key="fk_subpart_cred_crs"/>

    </class>
</hibernate-mapping>
